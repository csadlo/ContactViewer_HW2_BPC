<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ggalasso.contactviewer_hw2_bpc.AddContact">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="First Name"
        android:ems="10"
        android:id="@+id/first_name_field"
        android:layout_alignParentStart="true"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Last Name"
        android:ems="10"
        android:id="@+id/last_name_field"
        android:layout_below="@+id/first_name_field"
        android:layout_alignParentStart="true"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_field"
        android:layout_below="@+id/last_name_field"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/last_name_field"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone"
        android:id="@+id/phone_label"
        android:layout_below="@+id/title_field"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/title_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_field"
        android:layout_below="@+id/phone_label"
        android:layout_alignParentStart="true"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/email_label"
        android:layout_below="@+id/phone_field"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/phone_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_field"
        android:layout_below="@+id/email_label"
        android:layout_alignParentStart="true"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Social"
        android:id="@+id/social_label"
        android:layout_below="@+id/email_field"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/email_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/social_field"
        android:layout_below="@+id/social_label"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/social_label"
        android:editable="true" />

</RelativeLayout>
